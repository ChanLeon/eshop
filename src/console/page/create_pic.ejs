<!-- 创建滚动图片 -->
<div class="modal" id="pic_modal" role='dialog' data-backdrop='false'>
    <div class="modal-dialog">
        <div class="modal-content" style='border-radius:20px;background-color:#fbf3e6;'>
            <div class="modal-header" style='color:#000;'>
                <h4 class="text-center">创建滚动图片</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                
				<form enctype="multipart/form-data" method="post" action="/console/admin/upload" id="createPic">
					<div class="form-group text-center" style='padding:30px 0;'>
						<label for="flag">图片标识：</label>
						<input type='text' id='flag' name='flag' class="form-control flag" placeholder="flag的值只能是0，1，2">
					</div>			
					<div class="form-group text-center" style='padding:30px 0;'>
						<input class="btn btn-primary" type='file' id='file' name='file' style='margin:50px auto;'>
					</div>
					<div class="text-center err" style='margin-bottom: 20px;color:#f00;font-size:18px;'>
						<span class='errInfo'></span>
					</div>
					<div class='form-group text-center'>
						<input type="hidden" name="_csrf" value="<%-locals._csrf%>">		
						<input type='hidden' name='scrollPic' value='create'>
						<button type='button' class="btn btn-success createPic" style='color:#fff;padding:8px 20px;'>创建图片</button>
					</div>
				</form>

            </div>
        </div>
    </div>
</div>