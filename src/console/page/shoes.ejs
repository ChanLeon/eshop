<%var shoesPathArr = locals.shoesArr ? locals.shoesArr : []%>
<%var shoesResultArr = locals.shoesResult ? locals.shoesResult : []%>
<div class='text-center col-xs-12 tab-pane fade' id='shoes'>
    <ul id="shoesTab" class="nav nav-tabs" style='border:0;margin:0 auto;padding:0;'>
        <li class="active col-xs-4 text-center">
            <a class='' href='#shoesAdd' data-toggle="tab" style='font-size:18px;'>增加女鞋</a>
        </li>
        <li class='col-xs-4 text-center'>
            <a class='' href="#shoesEdit" data-toggle="tab" style='font-size:18px;'>编辑女鞋</a>
        </li>
        <li class="col-xs-4 text-center">
            <a class='' href='#shoesDel' data-toggle="tab" style='font-size:18px;'>删除女鞋</a>
        </li>
    </ul>
    
    <div id="shoesTabContent" class="tab-content">
        <div class='text-center col-xs-12 tab-pane fade in active' id='shoesAdd'>
            <form enctype="multipart/form-data" method="post" action="/console/admin/upload" id="shoesAdd_">
                <div class="form-group">
                    <label for="picName">女鞋名字：</label>
                    <input type="text" name="picName" class="form-control picName" id='shoesAddName' placeholder="填写女鞋名称">
                </div>
                <div class="form-group">
                    <label for="picPrice">女鞋价格：</label>
                    <input type="text" name="picPrice" class="form-control picPrice" id='shoesAddPrice' placeholder="填写女鞋价格">
                </div>
                <div class="form-group text-center" style='padding:30px 0 0 0;'>
                    <label for="flag">图片标识：</label>
                    <input type='text' id='shoesAddFlag' name='flag' class="form-control flag" placeholder="注意flag的值">
                </div>
                <div class="col-xs-12 form-group text-center" style='padding:0;'>
                    <input class="btn btn-primary" type='file' id='shoesAddFile' name='file' style='margin:50px auto 0;'>
                </div>
                <div class="col-xs-12 text-center err" style='margin-bottom: 20px;color:#f00;font-size:18px;'>
                    <span class='errInfo'></span>
                </div>
                <div class='col-xs-12 form-group text-center'>
                    <input type="hidden" name="_csrf" value="<%-locals._csrf%>">		
                    <input type='hidden' name='scrollPic' value='shoesAdd'>
                    <button type='button' class="btn btn-success shoesAdd_" style='color:#fff;padding:8px 20px;'>增加女鞋</button>
                </div>
            </form>
        </div>

        <div class='text-center col-xs-12 tab-pane fade' id='shoesEdit'>
            <form enctype="multipart/form-data" method="post" action="/console/admin/upload" id="shoesEdit_">
                <div class="form-group" style='height:280px;'>
                    <div class='col-xs-12'>
                        <label for="scrollBan">选择需要被编辑的女鞋：</label>
                    </div>
                    <%if(shoesPathArr.length == 0) {%>
                        <div class='col-xs-12 text-center' style='height:200px;font-size:24px;margin-top:100px;'>
                            <span>没有上架的商品，无法编辑，请增加女鞋上架</span>
                        </div>
                    <%}else {%>
                    <%shoesResultArr.forEach(function(shoesPath,i) {%>
                        <%if(i == 0) {%>
                            <div class='col-xs-2'>
                                <input type="radio" value="<%= shoesPath.picFlat%>" name="flag" class='flag' id='shoesEditFlag' checked/> 
                                <img class='img-responsive center-block' src='<%= shoesPathArr[i]%>'>
                            </div>
                        <%}else {%>
                            <div class='col-xs-2'>
                                <input type="radio" value="<%= shoesPath.picFlat%>" name="flag" class='flag'  id='shoesEditFlag'/> 
                                <img class='img-responsive center-block' src='<%= shoesPathArr[i]%>'>
                            </div>
                        <%}%>
                    <%})%>
                    <%}%>
                </div>
                <div class="form-group">
                    <label for="picName">女鞋名字：</label>
                    <input type="text" name="picName" class="form-control picName" id='shoesEditName' placeholder="填写女鞋名称">
                </div>
                <div class="form-group">
                    <label for="picPrice">女鞋价格：</label>
                    <input type="text" name="picPrice" class="form-control picPrice" id='shoesEditPrice' placeholder="填写女鞋价格">
                </div>
                <div class="col-xs-12 form-group text-center" style='padding:0;'>
                    <input class="btn btn-primary" type='file' id='shoesEditFile' name='file' style='margin:50px auto 0;'>
                </div>
                <div class="col-xs-12 text-center err" style='margin-bottom: 20px;color:#f00;font-size:18px;'>
                    <span class='errInfo'></span>
                </div>
                <div class='col-xs-12 form-group text-center'>
                    <input type="hidden" name="_csrf" value="<%-locals._csrf%>">		
                    <input type='hidden' name='scrollPic' value='shoesEdit'>
                    <button type='button' class="btn btn-success shoesEdit_" style='color:#fff;padding:8px 20px;'>编辑女鞋</button>
                </div>
            </form>
        </div>

        <div class='text-center col-xs-12 tab-pane fade' id='shoesDel'>
            <form enctype="multipart/form-data" method="post" action="/console/admin/upload" id="shoesDel_">
                <div class="form-group" style='height:280px;'>
                    <div class='col-xs-12'>
                        <label for="scrollBan">选择需要被删除的女鞋：</label>
                    </div>
                    <%if(shoesPathArr.length == 0) {%>
                        <div class='col-xs-12 text-center' style='height:200px;font-size:24px;margin-top:100px;'>
                            <span class='noShoes'>没有上架的商品，无法删除商品，请增加女鞋上架</span>
                        </div>
                    <%}else {%>
                    <%shoesResultArr.forEach(function(shoesPath,i) {%>
                        <%if(i == 0) {%>
                            <div class='col-xs-2'>
                                <input type="radio" value="<%= shoesPath.picFlat%>" name="flag" class='flag' id='shoesDelFlag' checked/> 
                                <img class='img-responsive center-block' src='<%= shoesPathArr[i]%>'>
                            </div>
                        <%}else {%>
                            <div class='col-xs-2'>
                                <input type="radio" value="<%= shoesPath.picFlat%>" name="flag" class='flag'  id='shoesDelFlag'/> 
                                <img class='img-responsive center-block' src='<%= shoesPathArr[i]%>'>
                            </div>
                        <%}%>
                    <%})%>
                    <%}%>
                </div>
                <div class='col-xs-12 form-group text-center'>
                    <input type="hidden" name="_csrf" value="<%-locals._csrf%>">		
                    <input type='hidden' name='scrollPic' value='shoesDel'>
                    <button type='button' class="btn btn-success shoesDel_" style='color:#fff;padding:8px 20px;'>删除女鞋</button>
                </div>
            </form>
        </div>
    </div>

</div>