<!DOCTYPE html>
<html>
	<head>
		<!--inline[../../common/page/head.ejs]-->
		<!-- @require "../../common/static/lib/countdown.js" -->
		<style type="text/css">
			.img-responsive { margin: 60px auto 30px; height: 200px; }
			.panel { width: 70%; margin: auto; border-color: #eee; box-shadow: 0 2px 10px #000; }
			.panel .panel-footer { padding: 0; }
		</style>
	</head>
	<body class="container" style="background-color: #fff;">	 
		<div class="panel">
			<div class="panel-body">
				<h5 class="text-danger text-center"><%= err %></h5>
				<p class="text-center">
					<span id="time"><%= locals.time || 2 %></span>秒后自动跳转
				</p>
			</div>
			<div class="panel-footer">
				<a class="btn btn-warning btn-block" href="<%- cb %>">点击直接跳转</a>
			</div>
		</div>

		<input type="hidden" id="t" value="<%= locals.time || 2 %>">
		<input type="hidden" id="h" value="<%- cb %>">
		<!--inline[../../common/page/foot.ejs]-->

		<script type="text/javascript">
			$(document).ready(function() {
                var clihei = $(document.body)[0].clientHeight || $(document.docuementElement)[0].clientHeight
                $('.panel').css('margin-top', clihei);
				var $time = $('#time'),

					t = parseInt($('#t').val()),
					h = $('#h').val();

				if($time.length){
					countdown(t, function(sec){
						$time.html(sec);
					}, function(sec){
						window.location.href = h;
					})
				}
				
			});
		</script>
	</body>
</html>