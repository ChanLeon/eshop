<!DOCTYPE html>
<html>
    <head>
        <!--inline[../../common/page/head.ejs]-->
        <!-- 
            @require "../static/index.js"
            @require "../static/index.css"
        -->
    </head>
    <body>
        <!--inline[../../common/page/header.ejs]-->
        <%var shoesResult_ = locals.shoesResult ? locals.shoesResult : []%>
        <%var shoesArr_ = locals.shoesArr ? locals.shoesArr : []%>
        <div class='container'>
            <div class='text-center ladyClothes'>
                <%if(shoesResult_.length == 0) {%>
                    <div class='col-xs-12 text-center' data-no='' style='height:300px;margin-top:200px;font-size:24px;'>
                        <span>商品即将上架，敬请期待</span>
                    </div>
                <%}else {%>
                    <% shoesResult_.forEach(function(data, i) {%>
                        <div class='col-xs-3 text-center' data-no='<%= i%>'>
                            <img class='img-responsive center-block' src='<%= shoesArr_[i]%>'>                         
                            <div class="text-center row opaModel">
                                <p class="text-center"><%= data.picName%></p>
                                <p class="text-center">¥<%= data.picPrice%></p>
                            </div>
                            <div class='text-center buy'>
                                <button type='button' class='btn btn-default'>购买</button>
                            </div>
                        </div>
                    <%})%>
                <%}%>                
            </div>
        </div>
        <!--inline[../../common/page/footer.ejs]-->
        <!--inline[../../common/page/foot.ejs]-->
    </body>
</html>