	<body class="container" style="background-color: #fff;">	 
		<div class="panel">
			<div class="panel-body">
				<h5 class="text-danger text-center"><%= err %></h5>
				<p class="text-center">
					<span id="time"><%= locals.time || 2 %></span>秒后自动跳转
				</p>
			</div>
			<div class="panel-footer">
				<a class="btn btn-warning btn-block" href="<%- cb %>">点击直接跳转</a>
			</div>
		</div>

		<input type="hidden" id="t" value="<%= locals.time || 2 %>">
		<input type="hidden" id="h" value="<%- cb %>">
		<script src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js"></script>
<script src="http://cdn.bootcss.com/bootstrap/3.3.0/js/bootstrap.min.js"></script> 
<script src="/static/common/lib/countdown_30ab5e2.js"></script>


		<script type="text/javascript">
			$(document).ready(function() {
                var clihei = $(document.body)[0].clientHeight || $(document.docuementElement)[0].clientHeight
                $('.panel').css('margin-top', clihei);
				var $time = $('#time'),

					t = parseInt($('#t').val()),
					h = $('#h').val();

				if($time.length){
					countdown(t, function(sec){
						$time.html(sec);
					}, function(sec){
						window.location.href = h;
					})
				}
				
			});
		</script>
